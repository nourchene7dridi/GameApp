<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multiplayer_shakeit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Timer en haut -->
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 s"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />


    <!-- Score du joueur -->
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOI : 0"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/time"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Gif du shaker au centre -->
    <ImageView
        android:id="@+id/shakeGif"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <!-- Score de l'adversaire -->
    <TextView
        android:id="@+id/scoreADV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADV : 0"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/shakeGif"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Liste des appareils Bluetooth (cachée par défaut) -->
    <ListView
        android:id="@+id/deviceListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        android:layout_centerInParent="true" />

    <!-- Progress bar pour la connexion -->
    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" />

</RelativeLayout>